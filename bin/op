#!/usr/bin/env bash

function main {
  local shome="$(cd -P -- "${BASH_SOURCE%/*}/.." && pwd -P)"
  source "$shome/script/profile"

  if [[ -x "$shome/vendor/op-${OP_VERSION}/op" ]]; then
    exec "$shome/vendor/op-${OP_VERSION}/op" "$@"
  fi

  echo "ERROR: op not installed"
  return 1
}

source sub-chain "$BASH_SOURCE" "$@"
